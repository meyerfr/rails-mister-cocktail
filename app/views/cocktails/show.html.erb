<br>
<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>


<ol class="ingredient-show-list">
  <% if !@doses.empty? %>
    Ingredients:
  <% end %>
  <% @doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "delete ingredient", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ol>

<%= link_to 'Edit this cocktail', edit_cocktail_path %>
<%= link_to "Back to the list of cocktails",  cocktails_path %>

